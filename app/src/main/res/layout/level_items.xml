<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/card_layout_bg"
    android:layout_marginBottom="10dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewCharacter"
        android:layout_width="80dp"
        android:layout_height="80dp"
        tools:src="@drawable/level_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:riv_corner_radius="8dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/card_layout_bg"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Level : 15"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/imageViewCharacter"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewMinCoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="+ 750,000,000"
        android:textColor="@color/progressMinValue"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/coinView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/brain_mint_ic"
        app:layout_constraintEnd_toStartOf="@id/textViewMinCoin"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewTap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Tap : + 18 Coin"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/imageViewCharacter"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewEnergy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="+ 18,000"
        android:textColor="@color/progressOneValue"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/textViewMinCoin"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/energyView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="2dp"
        android:src="@drawable/energy_ic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/coinView"
        android:layout_marginBottom="10dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/layoutIsPassed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/DarkGradientLockedView"
        app:cardCornerRadius="8dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/lock_ic"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>