<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@drawable/base_app_bg"
        tools:context=".Activities.EarnActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_above="@id/startapp_banner"
            android:layout_marginBottom="20dp"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/earn_ic"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/earn"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textSize="25sp"
                    android:fontFamily="@font/opensans_bold"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/dailyReward"
                    android:textColor="@color/white"
                    android:fontFamily="@font/opensans_bold"
                    android:drawableEnd="@drawable/icon_expand_more"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/rewardLayout"
                    android:layout_width="match_parent"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_height="60dp"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:background="@drawable/card_layout_bg"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">

                    <RelativeLayout
                        android:id="@+id/dailyReward"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/card_layout_bg">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/view"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/daily_reward_ic_t"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/dailyReward"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:ignore="RelativeOverlap" />

                    </RelativeLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/dailyRewardInfo"
                    android:textColor="@color/white"
                    android:textStyle="normal"
                    android:drawableStart="@drawable/info_ic"
                    android:drawablePadding="10dp"
                    android:textAlignment="gravity"
                    android:gravity="center_vertical"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/RewardCode"
                    android:textColor="@color/white"
                    android:fontFamily="@font/opensans_bold"
                    android:drawableEnd="@drawable/icon_expand_more" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/earnCode"
                    android:layout_width="match_parent"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_height="60dp"
                    android:background="@drawable/card_layout_bg"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/card_layout_bg">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/earnCode"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:ignore="RelativeOverlap" />

                    </RelativeLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="10dp"
                    >
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/makeMoreMoney"
                        android:textColor="@color/white"
                        android:fontFamily="@font/opensans_bold"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/chanceAdShow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="( 3 / 3)"
                        android:layout_alignParentEnd="true"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        tools:ignore="RelativeOverlap" />

                </RelativeLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/makeMoney"
                    android:layout_width="match_parent"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_height="60dp"
                    android:background="@drawable/card_layout_bg"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/card_layout_bg">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:text="@string/ShowAd"
                            android:layout_marginStart="10dp"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:ignore="RelativeOverlap" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/brain_mint_ic"
                            android:layout_toStartOf="@id/reward"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="5dp"
                            android:padding="2dp"/>


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/reward"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:text="+10,000"
                            android:layout_marginEnd="10dp"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,RelativeOverlap" />

                    </RelativeLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>



            </androidx.appcompat.widget.LinearLayoutCompat>
        </ScrollView>



        <com.startapp.sdk.ads.banner.Banner
            android:id="@+id/startapp_banner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</layout>