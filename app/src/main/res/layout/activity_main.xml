<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/base_app_bg"
        tools:context=".Activities.MainActivity">

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/drawerNavigationView"
            android:layout_width="@dimen/DrawerWidth"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#40228d">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@drawable/navigation_header_layout_bg">

                    <FrameLayout
                        android:id="@+id/drawer_profile_layout"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="50dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/drawer_profile_bg"
                        >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/drawer_profile"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            />
                    </FrameLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/drawerTvUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/drawer_profile_layout"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/opensans_bold"
                        android:maxLines="1"
                        tools:text="hi.masoud"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/drawerTvUsername"
                        android:layout_centerHorizontal="true"
                        android:text="@string/morimintUser"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </RelativeLayout>

                <com.google.android.material.navigation.NavigationView
                    android:id="@+id/menuNavigationView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#40228d"
                    app:itemIconPadding="20dp"
                    app:itemIconSize="30dp"
                    app:itemIconTint="@color/white"
                    app:itemTextAppearance="@style/DrawerTextStyles"
                    app:itemTextAppearanceActiveBoldEnabled="true"
                    app:itemTextColor="@color/white"
                    app:menu="@menu/drawer_item_menu" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.google.android.material.navigation.NavigationView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/bottomNavbar"
                android:layout_marginBottom="15dp"
                android:scrollbars="none">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RelativeLayout
                        android:id="@+id/profileLayout"
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/corner_cards"
                        android:padding="2dp"
                        app:layout_constraintStart_toEndOf="@id/open_drawer"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/blue_tick_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="5dp"
                            android:padding="4dp"
                            android:src="@drawable/blue_tick_ic"
                            android:visibility="gone" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="27dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="2dp"
                            android:layout_toStartOf="@id/blue_tick_icon"
                            android:ellipsize="end"
                            android:maxWidth="80dp"
                            android:maxLines="1"
                            tools:text="soheyldarzi"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="27dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="2dp"
                            android:layout_alignParentBottom="true"
                            android:text="@string/welcomeApp"
                            android:textColor="@color/white"
                            android:textSize="9sp"
                            android:textStyle="normal"
                            tools:ignore="SmallSp" />

                    </RelativeLayout>

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/imageViewProfile"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="18dp"
                        android:src="@drawable/base_profile_ic"
                        app:layout_constraintStart_toEndOf="@id/open_drawer"
                        app:layout_constraintTop_toTopOf="parent"
                        app:riv_oval="true" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/open_drawer"
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="30dp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <View
                            android:layout_width="16dp"
                            android:layout_height="2dp"
                            android:background="@color/white" />

                        <View
                            android:layout_width="16dp"
                            android:layout_height="2dp"
                            android:layout_marginTop="7dp"
                            android:background="@color/white" />

                        <View
                            android:layout_width="16dp"
                            android:layout_height="2dp"
                            android:layout_marginTop="7dp"
                            android:background="@color/white" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvDay"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/days_bg"
                        android:gravity="center"
                        android:textAlignment="gravity"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="9 0" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/opensans_bold"
                        android:text="@string/days"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@id/tvDay"
                        app:layout_constraintStart_toStartOf="@id/tvDay"
                        app:layout_constraintTop_toBottomOf="@id/tvDay" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/mint_logo"
                        android:layout_width="@dimen/MintLogoBrain"
                        android:layout_height="@dimen/MintLogoBrain"
                        android:layout_marginTop="@dimen/MintLogoMarginTop"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/brain_mint_ic"
                        app:layout_constraintEnd_toStartOf="@id/tvBalanceCoin"
                        app:layout_constraintTop_toBottomOf="@id/profileLayout" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvBalanceCoin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/MintBalanceMarginTop"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/opensans_bold"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:textAlignment="gravity"
                        android:textColor="@color/white"
                        android:textSize="@dimen/MintBalanceTextSize"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/profileLayout"
                        tools:text="0" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/mintLayout"
                        android:layout_width="@dimen/BaseCoinLayoutWidth"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/profileLayout">

                        <RelativeLayout
                            android:id="@+id/parent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <FrameLayout
                                android:id="@+id/coin"
                                android:layout_width="@dimen/CoinMintImage"
                                android:layout_height="@dimen/CoinMintImage"
                                android:background="@drawable/mint_background"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/CoinMintImageMarginTop"
                                android:visibility="visible"
                                >
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/coin_image"
                                    android:layout_width="235dp"
                                    android:layout_height="235dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/level_one"
                                    android:layout_marginTop="40dp"
                                    android:padding="5dp"
                                    android:scaleType="fitXY"
                                    />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/turbo"
                                android:layout_width="@dimen/CoinMintImage"
                                android:layout_height="@dimen/CoinMintImage"
                                android:background="@drawable/mint_turbo_background"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/CoinMintImageMarginTop"
                                android:visibility="gone"
                                >
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/turbo_image"
                                    android:layout_width="235dp"
                                    android:layout_height="235dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="35dp"
                                    android:scaleType="fitXY"
                                    />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/CoinLayout"
                                android:layout_width="@dimen/MintFrameWidth"
                                android:layout_height="@dimen/MintFrameHeight"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/MintFrameMarginTop"
                                />

                        </RelativeLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/turboMint"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="40dp"
                            android:layout_marginBottom="20dp"
                            android:src="@drawable/rocket_ic"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/applicationManagerLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/mintLayout"
                        >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/icon_energy"
                            android:layout_width="@dimen/IconEnergySize"
                            android:layout_height="@dimen/IconEnergySize"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/energy_ic"
                            app:layout_constraintEnd_toStartOf="@id/tvEnergy"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvEnergy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:maxWidth="150dp"
                            android:maxLines="1"
                            android:textAlignment="gravity"
                            android:textColor="@color/white"
                            android:textSize="@dimen/tvEnergyTextSize"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="1000 / 1000" />

                        <ProgressBar
                            android:id="@+id/level_xp_progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="@dimen/LevelProgressBarWidth"
                            android:layout_height="@dimen/LevelProgressBarHeight"
                            android:layout_marginTop="@dimen/LevelProgressBarMarginTop"
                            android:indeterminate="false"
                            android:progressTintMode="src_in"
                            android:progressDrawable="@drawable/custom_progress_level_bg"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/icon_energy"
                            tools:ignore="UnusedAttribute" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvYourLevel"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="@string/yourLevel"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_marginTop="5dp"
                            app:layout_constraintStart_toStartOf="@id/level_xp_progressBar"
                            app:layout_constraintEnd_toEndOf="@id/level_xp_progressBar"
                            app:layout_constraintTop_toTopOf="@id/level_xp_progressBar"
                            app:layout_constraintBottom_toBottomOf="@id/level_xp_progressBar"
                            />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/level_layout"
                            android:layout_width="@dimen/levelShow"
                            android:layout_height="@dimen/levelShow"
                            android:layout_marginTop="@dimen/levelShowMarginTop"
                            android:background="@drawable/level_circle_layout"
                            android:orientation="vertical"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="35dp"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/levelShowTextMarginTop"
                                android:text="@string/levelText"
                                android:textColor="@color/white"
                                android:textSize="@dimen/levelShowTextSize"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvLevelShow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:maxLines="1"
                                tools:text="1"
                                android:textColor="@color/white"
                                android:textSize="@dimen/levelShowTextSize"
                                android:textStyle="bold" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <RelativeLayout
                        android:id="@+id/newsLayout"
                        android:layout_width="@dimen/MainCardWidth"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/MainCardMarginTop"
                        android:background="@drawable/card_layout_bg"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/applicationManagerLayout">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvNewsTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:padding="5dp"
                            android:text="@string/importantNews"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvNewsMessage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvNewsTitle"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/opensans_bold"
                            android:maxLines="1"
                            android:padding="5dp"
                            android:textColor="@color/white"
                            android:textSize="17sp"
                            tools:text="message news" />

                    </RelativeLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:drawableEnd="@drawable/icon_expand_more"
                        android:text="@string/forYou"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/newsLayout"
                        app:layout_constraintTop_toBottomOf="@id/newsLayout" />

                    <RelativeLayout
                        android:id="@+id/jackpotViewLayout"
                        android:layout_width="@dimen/MainCardWidth"
                        android:layout_height="@dimen/JackpotItemHeight"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/card_layout_bg"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/title">

                        <RelativeLayout
                            android:id="@+id/jackpot"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/MainCardHeight"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:background="@drawable/card_layout_bg">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/view3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="15dp"
                                android:fontFamily="@font/opensans_bold"
                                android:text="@string/jackpot"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                        </RelativeLayout>

                    </RelativeLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavbar"
                android:layout_width="@dimen/bottomNavigationBarWidth"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/referral"
                        android:layout_width="@dimen/NavigationLayoutSize"
                        android:layout_height="@dimen/NavigationLayoutSize"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/card_layout_bg"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/NavigationIconSize"
                            android:layout_height="@dimen/NavigationIconSize"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/NavigationIconMarginTop"
                            android:src="@drawable/referral_ic" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/opensans_bold"
                            android:padding="1dp"
                            android:text="@string/referral"
                            android:textColor="@color/white"
                            android:textSize="@dimen/NavigationTextSize" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.5" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/moriNews"
                        android:layout_width="@dimen/NavigationLayoutSize"
                        android:layout_height="@dimen/NavigationLayoutSize"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/card_layout_bg"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/NavigationIconSize"
                                android:layout_height="@dimen/NavigationIconSize"
                                android:layout_marginTop="@dimen/NavigationIconMarginTop"
                                android:src="@drawable/morinews_ic"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/moriNews_dot"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/news_notification_ic"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/opensans_bold"
                            android:text="@string/moriNews"
                            android:textColor="@color/white"
                            android:textSize="@dimen/NavigationTextSize" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.5" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/task"
                        android:layout_width="@dimen/NavigationLayoutSize"
                        android:layout_height="@dimen/NavigationLayoutSize"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/card_layout_bg"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/NavigationIconSize"
                            android:layout_height="@dimen/NavigationIconSize"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/NavigationIconMarginTop"
                            android:src="@drawable/task_ic" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/opensans_bold"
                            android:padding="1dp"
                            android:text="@string/task"
                            android:textColor="@color/white"
                            android:textSize="@dimen/NavigationTextSize" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.5" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/earn"
                        android:layout_width="@dimen/NavigationLayoutSize"
                        android:layout_height="@dimen/NavigationLayoutSize"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/card_layout_bg"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/NavigationIconSize"
                            android:layout_height="@dimen/NavigationIconSize"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/NavigationIconMarginTop"
                            android:src="@drawable/earn_ic" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
